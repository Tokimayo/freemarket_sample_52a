        = icon "fab", "facebook-square", class: "item-detail__icons--facebook"
      = link_to "", class: 'link-btn' do
        = icon "fab", "twitter-square", class: "item-detail__icons--twitter"
      = link_to "", class: 'link-btn' do
        = icon "fab", "line", class: "item-detail__icons--line"
