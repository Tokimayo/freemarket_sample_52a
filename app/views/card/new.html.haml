.single-container
  = render 'shared/header_signup', { stepflg: "step5" }
  %main.single-main
    .single-title
      %h2 支払い方法
    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class: 'form') do
      .field
        .label-wrapper
          =label_tag :カード番号
          %span.Required__label 必須
        .card_icon--wrapper
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          = image_tag 'visa.png', alt: 'visa', class:"card_icon"
          = image_tag 'master_card.png', alt: 'master_card', class:"card_icon"
          = image_tag 'saisoncard.png', alt: 'saisoncard', class:"card_icon"
          = image_tag 'jcb.png', alt: 'jcb.png', class:"card_icon"
          = image_tag 'american_express.png', alt: 'american_express', class:"card_icon"
          = image_tag 'diners_club.png', alt: 'diners_club', class:"card_icon"
          = image_tag 'discover.png', alt: 'discover', class:"card_icon"
      .field
        .label-wrapper
          =label_tag :有効期限
          %span.Required__label 必須
        .select-wrap
          %select#exp_month{name: "exp_month", type: "text", class:"card_deadline_input"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          =label_tag "exp_month" do
            = fa_icon 'angle-down', class: "step4-pulldown__icon--month", for: "exp_month"
          %span.select__label 月
          %select#exp_year{name: "exp_year", type: "text", class:"card_deadline_input"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          =label_tag "exp_year" do
            = fa_icon 'angle-down', class: "step4-pulldown__icon--year", for: "exp_year"
          %span.select__label 年
          %br
      .field
        .label-wrapper
          =label_tag :セキュリティコード
          %span.Required__label 必須
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        = link_to "#", class: "single-text link-text right-text" do
          = fa_icon 'question-circle', class: "question__icon"
          カード背面の番号とは？
      #card_token
      .actions
        = submit_tag "次へ進む", id: "token_submit"
  = render 'shared/footer_single'