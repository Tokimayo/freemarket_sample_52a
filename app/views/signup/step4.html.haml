%h2 発送元・お届け先住所入力
= form_for @user, url: signup_index_path, method: :post, html: {class: 'fifth-wrapper__box'} do |f|
  - if @user.errors.any?
    %h2= "#{@user.errors.full_messages.count}件のエラーが発生しました。"
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message
  = f.fields_for :shipping_address do |b|
    .field
      = b.label :"お名前(全角)"
      %br/
      = b.text_field :family_name, autofocus: true, placeholder: "例)山田"
      = b.text_field :first_name, autofocus: true, placeholder: "例)彩"
    .field
      = b.label :"お名前カナ(全角)"
      %br/
      = b.text_field :family_name_kana, autofocus: true, placeholder: "例)ヤマダ"
      = b.text_field :first_name_kana, autofocus: true, placeholder: "例)アヤ"
    .field
      = b.label :"郵便番号"
      %br/
      = b.text_field :postal_code, autofocus: true, placeholder: "例)123-4567"
    .field
      = b.label :"都道府県"
      %br/
      = b.collection_select :prefectures, JpPrefecture::Prefecture.all, :name, :name 
    .field
      = b.label :"市区町村"
      %br/
      = b.text_field :municipalities, autofocus: true, placeholder: "例)横浜市緑区"
    .field
      = b.label :"番地"
      %br/
      = b.text_field :street_number, autofocus: true, placeholder: "例)青山1-1-1"
    .field
      = b.label :"建物名"
      %br/
      = b.text_field :building_name, autofocus: true, placeholder: "例)柳ビル103"
    .field
      = b.label :"電話"
      %br/
      = b.text_field :phone_number, autofocus: true, placeholder: "例)柳ビル103"

  .actions
    = f.submit "次へ進む"